<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icelandic_courses.elie.myfirstapp" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.ClassicGameActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".view.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MyActivity" />
        </activity>
        <activity
            android:name=".view.MovesGameActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".view.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MyActivity" />
        </activity>
        <activity
            android:name=".view.PreferenceActivity"
            android:label="@string/title_activity_preference" >
        </activity>
        <activity
            android:name=".view.GameFinishedActivity"
            android:label="@string/title_activity_game_finished" >
        </activity>
        <activity
            android:name=".view.HighScoresActivity"
            android:label="@string/title_activity_high_scores" >
        </activity>
    </application>

</manifest>
